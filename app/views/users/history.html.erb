<%= render(partial: 'layouts/header') %>
<div class="page-section flexbox vertical stretch">
    <div class="section-title-centered">
      Your Ride History
    </div>
    <h1>You have biked <%= current_user.hours.truncate() %> hours on <%= Rental.where(user_id: current_user.id).count %> rides!</h1>
    <div>
        <% @rentals = Rental.where(user_id: current_user.id) %>
          <div class="max-w-7xl mx-auto mt-12">
          <center>
            <%= render "history", rentals: @rentals %>
            <div class="button">
                <%= link_to "Return to Profile", user_path(current_user) %>
            </div>
            </center>
          </div>
    </div>
</div>